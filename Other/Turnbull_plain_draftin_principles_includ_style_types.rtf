\par {\listtext\pard\plain\s16 \f38\expnd0\expndtw-3\lang3081\langfe1033\langfenp1033\insrsid8257942 \hich\af38\dbch\af0\loch\f38 14\tab}}\pard\plain \s16\ql \li0\ri0\sb240\widctlpar
